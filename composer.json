{
    "name": "tea-aroma/laravel-lexicon",
    "description": "Lexicon is a Laravel package that helps encapsulate and manage translations, making multilingual support organized, scalable, and developer-friendly.",
    "keywords": ["laravel", "localization", "multi-language", "translation manager", "localization helper"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TeaAroma\\Lexicon\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12",
        "illuminate/database": "^12"
    },
    "extra": {
        "laravel": {
            "providers": [
                "TeaAroma\\Lexicon\\Providers\\LexiconServiceProvider"
            ]
        }
    }
}
